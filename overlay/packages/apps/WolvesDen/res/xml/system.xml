<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/system_category"
    android:layout="@layout/tab"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <Preference
        android:key="animations"
        android:fragment="com.gzr.wolvesden.fragments.Animations"
        android:title="@string/animations" />
 
    <Preference
        android:title="@string/app_ops_settings"
        android:fragment="com.android.settings.applications.AppOpsSummary"/>

    <Preference
        android:key="button"
        android:title="@string/button_title"
        android:fragment="com.gzr.wolvesden.fragments.Button" />

    <Preference
        android:key="leds"
        android:fragment="com.gzr.wolvesden.fragments.LedSettings"
        android:title="@string/leds_title" />

    <Preference
        android:key="notifications"
        android:fragment="com.gzr.wolvesden.fragments.Notifications"
        android:title="@string/notifications_title" />

    <Preference
        android:key="powermenu"
        android:fragment="com.gzr.wolvesden.fragments.PowerMenu"
        android:title="@string/powermenu_title" />

    <Preference
        android:key="daynight"
        android:fragment="com.gzr.wolvesden.fragments.DayNightSettings"
        android:title="@string/daynight_title"/>

    <Preference
        android:key="torch"
        android:title="@string/torch_title"
        android:fragment="com.gzr.wolvesden.fragments.Torch" />

    <Preference
        android:key="various_system"
        android:fragment="com.gzr.wolvesden.fragments.VariousSystem"
        android:title="@string/various_system_title" />

</PreferenceScreen>
