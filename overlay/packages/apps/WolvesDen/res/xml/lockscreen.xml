<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/lockscreen_category"
    android:layout="@layout/tab"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <Preference
            android:title="@string/lockscreen_tuner_title" >
            <intent android:action="android.intent.action.MAIN"
                android:targetPackage="com.android.systemui"
                android:targetClass="com.android.systemui.tuner.LockscreenActivity" />
    </Preference>

    <Preference
            android:key="lockscreen_weather"
            android:title="@string/lockscreen_weather_title"
            android:fragment="com.gzr.wolvesden.fragments.LockScreenWeatherSettings" />

    <Preference
        android:key="various_lockscreen"
        android:title="@string/various_lockscreen_title"
        android:fragment="com.gzr.wolvesden.fragments.VariousLockscreen" />

</PreferenceScreen>
